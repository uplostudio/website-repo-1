---

<footer style="background-color: var(--bg); color: var(--text);">
  <!-- Main Footer Content -->
  <Container class="py-8 lg:py-12">
    <div class="flex flex-col justify-start items-start gap-8 lg:gap-20">
      
      <!-- Top Section with Logo and Contact Info -->
      <div class="w-full pb-8 lg:pb-[50px]" style="border-bottom: 1px solid var(--u-black-10);">
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-8">
          <!-- Logo -->
          <Logo />
          
          <!-- Contact Information -->
          <div class="flex flex-col sm:flex-row justify-start items-start gap-6 sm:gap-8 lg:gap-20 w-full lg:w-auto">
            <!-- Phone -->
            <div class="relative flex justify-start items-center gap-3">
              <div class="w-8 h-8 rounded-full relative flex-shrink-0" style="background-color: var(--u-black-10);">
                <div class="w-4 h-4 absolute left-2 top-2">
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
              </div>
              <span class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight" style="color: var(--text);">
                {contactInfo.phone}
              </span>
            </div>
            
            <!-- Email -->
            <div class="relative flex justify-start items-center gap-3">
              <div class="w-8 h-8 rounded-full relative flex-shrink-0" style="background-color: var(--u-black-10);">
                <div class="w-4 h-4 absolute left-2 top-2">
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
              </div>
              <span class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight" style="color: var(--text);">
                {contactInfo.email}
              </span>
            </div>
            
            <!-- Address -->
            <div class="relative flex justify-start items-center gap-3">
              <div class="w-8 h-8 rounded-full relative flex-shrink-0" style="background-color: var(--u-black-10);">
                <div class="w-4 h-4 absolute left-2 top-2">
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
              </div>
              <span class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight" style="color: var(--text);">
                {contactInfo.address}
              </span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Main Navigation Section -->
      <div class="flex flex-col lg:flex-row justify-start items-start gap-8 lg:gap-24 w-full">
        
        <!-- Menu Column -->
        <div class="flex flex-col justify-start items-start gap-6 w-full lg:w-auto">
          <h4 class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight" style="color: var(--text);">
            {t(footerSections[0].title)}
          </h4>
          <div class="flex flex-col sm:flex-row justify-start items-start gap-8 sm:gap-16 w-full">
            <!-- First Menu Sub-column -->
            <div class="flex flex-col justify-start items-start gap-4 w-full sm:w-auto">
              {footerSections[0].links.slice(0, 4).map((link) => (
                <a
                  href={link.href}
                  class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight transition-colors hover:text-[color:var(--primary)]"
                  style="color: var(--text);"
                >
                  {t(link.label)}
                </a>
              ))}
            </div>
            <!-- Second Menu Sub-column -->
            <div class="flex flex-col justify-start items-start gap-4 w-full sm:w-auto">
              {footerSections[0].links.slice(4).map((link) => (
                <a
                  href={link.href}
                  class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight transition-colors hover:text-[color:var(--primary)]"
                  style="color: var(--text);"
                >
                  {t(link.label)}
                </a>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Vertical Separator - Hidden on mobile -->
        <div class="hidden lg:block h-[203px] w-px" style="background-color: var(--u-black-10);"></div>
        
        <!-- Other Sections -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:flex lg:justify-start lg:items-start gap-8 lg:gap-16 w-full lg:w-auto">
          {footerSections.slice(1).map((section) => (
            <div class="flex flex-col justify-start items-start gap-6">
              <h4 class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight" style="color: var(--text);">
                {t(section.title)}
              </h4>
              <div class="flex flex-col justify-start items-start gap-4">
                {section.links.map((link) => (
                  <a
                    href={link.href}
                    class="text-sm font-normal font-['Geomanist'] leading-normal tracking-tight transition-colors hover:text-[color:var(--primary)]"
                    style="color: var(--text);"
                  >
                    {t(link.label)}
                  </a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </Container>
  
  <!-- Full Width Bottom Section -->
  <div class="w-full pt-6 lg:pt-[30px] pb-8 lg:pb-12" style="border-top: 1px solid var(--u-black-10);">
    <Container>
      <div class="flex flex-col justify-start items-start gap-6 lg:gap-[31px]">
        <!-- Copyright and Social -->
        <div class="w-full flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6 lg:gap-0">
          <div class="flex flex-col sm:flex-row justify-start items-start gap-4 sm:gap-6 lg:gap-11">
            <span class="text-xs font-normal font-['Geomanist'] leading-tight tracking-tight" style="color: var(--text);">
              Copyright © Asseco. All rights reserved
            </span>
            <a href="#" class="text-xs font-normal font-['Geomanist'] leading-tight tracking-tight transition-colors hover:text-[color:var(--primary)]" style="color: var(--text);">
              {t({ pl: "Polityka Prywatności", en: "Privacy Policy" })}
            </a>
            <a href="#" class="text-xs font-normal font-['Geomanist'] leading-tight tracking-tight transition-colors hover:text-[color:var(--primary)]" style="color: var(--text);">
              {t({ pl: "Regulamin", en: "Terms" })}
            </a>
          </div>
          
          <!-- Social Icons -->
          <div class="flex justify-start items-start gap-6">
            {socialIcons.map((social) => (
              <a
                href={social.href}
                class="w-4 h-4 relative transition-opacity hover:opacity-70"
                aria-label={social.name}
              >
                <svg
                  class="w-4 h-4"
                  fill="currentColor"
                  viewBox={social.viewBox}
                  style="color: var(--text);"
                >
                  <path d={social.path}></path>
                </svg>
              </a>
            ))}
          </div>
        </div>
        
        <!-- Legal Text -->
        <div class="w-full">
          <p class="text-xs sm:text-sm font-normal font-['Geomanist'] leading-tight" style="color: var(--u-black-70);">
            {t(legalText)}
          </p>
        </div>
      </div>
    </Container>
  </div>
</footer>
