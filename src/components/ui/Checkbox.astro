---
export interface Props {
  name: string;
  label?: string;
  required?: boolean;
  disabled?: boolean;
  class?: string;
}

const {
  name,
  label,
  required = false,
  disabled = false,
  class: className = '',
  ...rest
} = Astro.props;

const containerClasses = `flex items-start gap-2.5 ${className}`;
const checkboxClasses = `mt-1 w-4 h-4 rounded border transition-colors duration-200 focus:ring-2 focus:ring-[color:var(--primary)]`;
const labelClasses = `text-sm leading-relaxed`;
---

<div class={containerClasses}>
  <input
    type="checkbox"
    id={name}
    name={name}
    required={required}
    disabled={disabled}
    class={checkboxClasses}
    style="accent-color: var(--primary); border-color: var(--input-border);"
    {...rest}
  />
  
  {label && (
    <label for={name} class={labelClasses} style="color: var(--text);">
      <slot />
    </label>
  )}
</div>
