---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  src: ImageMetadata | string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  format?: 'webp' | 'avif' | 'jpeg' | 'jpg' | 'png';
  quality?: number;
  fallbackSrc?: string;
}

const { src, alt, width, height, class: className, format, quality, fallbackSrc } = Astro.props;

// Check if src is an imported image (ImageMetadata) or a string path
const isImportedImage = typeof src === 'object' && 'src' in src;
---

{isImportedImage ? (
  <Image 
    src={src as ImageMetadata}
    alt={alt}
    width={width}
    height={height}
    class={className}
    format={format}
    quality={quality}
  />
) : (
  <img 
    src={src as string}
    alt={alt}
    width={width}
    height={height}
    class={className}
    onerror={fallbackSrc ? `this.onerror=null; this.src='${fallbackSrc}';` : undefined}
  />
)}
