---
import Section from '@/ui/Section.astro';
import Heading from '@/ui/Heading.astro';
import Text from '@/ui/Text.astro';
import { t } from '@/utils/i18n.js';

const sectionTitle = {
  pl: "Wiele chmur, jeden cel",
  en: "Multiple clouds, one goal"
};

const sectionSubtitle = {
  pl: "Wydajne i optymalne środowisko pracy",
  en: "Efficient and optimal work environment"
};

const description = {
  pl: "Wybór technologii i dostawcy chmurowego nie musi być wyzwaniem. W Asseco Cloud rozumiemy, że pod różne projekty wymagane są różne technologie. Oferujemy rozwiązania w oparciu o chmury publiczne globalnych dostawców takich jak Amazon, Microsoft oraz Google.",
  en: "Choosing technology and cloud provider doesn't have to be a challenge. At Asseco Cloud we understand that different projects require different technologies. We offer solutions based on public clouds from global providers such as Amazon, Microsoft and Google."
};

const providers = [
  {
    name: "Amazon Web Services",
    logo: "AWS",
    description: {
      pl: "Najpopularniejsza chmura publiczna na Świecie. Oferuje rozwiązania do przetwarzania, przechowywania i analizy danych.",
      en: "The most popular public cloud in the world. Offers solutions for data processing, storage and analysis."
    }
  },
  {
    name: "Microsoft Azure",
    logo: "Azure",
    description: {
      pl: "Rozbudowana chmura wspierana przez technologię Microsoft, zapewniająca dostęp do technologii i rozwiązań Microsoft.",
      en: "Comprehensive cloud supported by Microsoft technology, providing access to Microsoft technologies and solutions."
    }
  },
  {
    name: "Google Cloud",
    logo: "GCP",
    description: {
      pl: "Chmura publiczna z dziesiątkami narzędzi wspierającymi przetwarzanie danych, uczenie maszynowe oraz tworzenie i zarządzanie aplikacjami.",
      en: "Public cloud with dozens of tools supporting data processing, machine learning and application creation and management."
    }
  }
];
---

<Section mode="light-gray">
  <div class="text-center mb-16">
    <Heading level={2} isMb class="max-w-[800px] mx-auto">
      {t(sectionTitle)}
    </Heading>
    
    <Text size="lg" class="max-w-[600px] mx-auto mb-8">
      {t(sectionSubtitle)}
    </Text>
    
    <Text class="max-w-[800px] mx-auto" size="md">
      {t(description)}
    </Text>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {providers.map((provider) => (
      <div 
        class="rounded-lg p-8 text-center transition-transform duration-300 hover:scale-105"
        style="background-color: var(--bg); border: 1px solid var(--card-border);"
      >
        <!-- Provider Logo Placeholder -->
        <div 
          class="w-20 h-20 mx-auto mb-6 rounded-lg flex items-center justify-center"
          style="background-color: var(--primary);"
        >
          <Text class="font-bold text-white text-lg">
            {provider.logo}
          </Text>
        </div>
        
        <Heading level={3} isMb>
          {provider.name}
        </Heading>
        
        <Text size="md">
          {t(provider.description)}
        </Text>
        
        <!-- Pioneer Line indicator -->
        <div class="mt-6 flex justify-center">
          <div 
            class="w-16 h-1 rounded"
            style="background-color: var(--primary);"
          ></div>
        </div>
      </div>
    ))}
  </div>
</Section>
