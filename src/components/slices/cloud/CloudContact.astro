---
import Section from '@/ui/Section.astro';
import Heading from '@/ui/Heading.astro';
import Text from '@/ui/Text.astro';
import Button from '@/ui/Button.astro';
import TwoColGrid from '@/ui/2ColGrid.astro';
import { t } from '@/utils/i18n.js';

const content = {
  title: {
    pl: "ZAPRASZAMY DO KONTAKTU",
    en: "WE INVITE YOU TO CONTACT"
  },
  description: {
    pl: "Zachęcamy do kontaktu z ekspertami Asseco Cloud, którzy z chęcią odpowiedzą na pytania związane z naszymi usługami.",
    en: "We encourage you to contact Asseco Cloud experts who will be happy to answer questions related to our services."
  },
  phone: "+48 91 42 57 444",
  expert: {
    pl: "Kontakt z ekspertem",
    en: "Contact with expert"
  }
};

const formLabels = {
  name: {
    pl: "Imię i nazwisko",
    en: "Name and surname"
  },
  phone: {
    pl: "Numer telefonu",
    en: "Phone number"
  },
  email: {
    pl: "Twój adres e-mail",
    en: "Your email address"
  },
  message: {
    pl: "Treść wiadomości (opcjonalne)",
    en: "Message content (optional)"
  },
  consent: {
    pl: "Wyrażam zgodę na przetwarzanie moich danych osobowych w celu przesyłania informacji marketingowych za pomocą środków komunikacji elektronicznej i programów automatyzujących na podstawie ustawy z dnia 18 lipca 2002 r. o świadczeniu usług drogą elektroniczną i w zw. z art. 172 ust. 1 ustawy z dnia 16 lipca 2004 r. prawa telekomunikacyjnego.",
    en: "I consent to the processing of my personal data for the purpose of sending marketing information via electronic communication means and automated programs based on the Act of July 18, 2002 on the provision of services by electronic means and in connection with art. 172 sec. 1 of the Act of July 16, 2004 Telecommunications Law."
  },
  submit: {
    pl: "Wyślij wiadomość",
    en: "Send message"
  }
};
---

<Section mode="light-gray">
  <TwoColGrid gap="xl">
    <div slot="left">
      <Heading level={2} isMb>
        {t(content.title)}
      </Heading>
      
      <Text class="mb-8" size="md">
        {t(content.description)}
      </Text>
      
      <div class="space-y-4">
        <div>
          <Text class="font-medium mb-2">
            {t(content.expert)}
          </Text>
          <div class="text-xl font-medium" style="color: var(--primary);">
            {content.phone}
          </div>
        </div>
      </div>
    </div>
    
    <div slot="right">
      <form class="space-y-6" action="#" method="POST">
        <!-- Name Field -->
        <div>
          <label class="block text-sm font-medium mb-2" style="color: var(--text);">
            {t(formLabels.name)}
          </label>
          <input
            type="text"
            name="name"
            required
            class="w-full px-4 py-3 rounded-lg border transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]"
            style="background-color: var(--bg); border-color: var(--card-border); color: var(--text);"
          />
        </div>
        
        <!-- Phone Field -->
        <div>
          <label class="block text-sm font-medium mb-2" style="color: var(--text);">
            {t(formLabels.phone)}
          </label>
          <input
            type="tel"
            name="phone"
            required
            class="w-full px-4 py-3 rounded-lg border transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]"
            style="background-color: var(--bg); border-color: var(--card-border); color: var(--text);"
          />
        </div>
        
        <!-- Email Field -->
        <div>
          <label class="block text-sm font-medium mb-2" style="color: var(--text);">
            {t(formLabels.email)}
          </label>
          <input
            type="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-lg border transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)]"
            style="background-color: var(--bg); border-color: var(--card-border); color: var(--text);"
          />
        </div>
        
        <!-- Message Field -->
        <div>
          <label class="block text-sm font-medium mb-2" style="color: var(--text);">
            {t(formLabels.message)}
          </label>
          <textarea
            name="message"
            rows="4"
            class="w-full px-4 py-3 rounded-lg border transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-[color:var(--primary)] resize-vertical"
            style="background-color: var(--bg); border-color: var(--card-border); color: var(--text);"
          ></textarea>
        </div>
        
        <!-- Consent Checkbox -->
        <div class="flex items-start gap-3">
          <input
            type="checkbox"
            id="consent"
            name="consent"
            required
            class="mt-1 w-4 h-4 rounded border transition-colors duration-200 focus:ring-2 focus:ring-[color:var(--primary)]"
            style="accent-color: var(--primary);"
          />
          <label for="consent" class="text-sm leading-relaxed" style="color: var(--text-light);">
            {t(formLabels.consent)}
          </label>
        </div>
        
        <!-- Submit Button -->
        <div class="pt-4">
          <Button type="submit" class="w-full justify-center">
            {t(formLabels.submit)}
          </Button>
        </div>
      </form>
    </div>
  </TwoColGrid>
</Section>
