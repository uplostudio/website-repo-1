---
export interface Props {
  class?: string;
}

const { class: className = "", ...rest } = Astro.props;
---

<div class={`flex flex-col lg:flex-row lg:items-stretch lg:justify-between gap-12 lg:gap-[52px] ${className}`} {...rest}>
  <!-- Content Column -->
  <div class="flex-1 max-w-2xl">
    <slot name="content" />
  </div>

  <!-- Documents/Links Column -->
  <div class="flex-none lg:min-w-[270px] flex flex-col lg:border-l lg:pl-8" style="border-color: var(--u-black-20);">
    <slot name="docs" />
  </div>
</div>
